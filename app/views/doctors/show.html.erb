<h1>Doctor Show Page</h1>

Name: <%= @doctor.name %><br>
Specialty: <%= @doctor.specialty %><br>
University: <%= @doctor.university %><br>
Current Hospital: <%= @doctor.hospital.name %><br><br>

<section id="all_patients">
Current Patients: <% @doctor.patients.each do |patient| %>
<section id="patient-<%= patient.id%>">

  <%= patient.name %><br>

  <%= button_to "Remove This Patient", "/doctors/#{@doctor.id}", method: :delete, params: {patient_id: "#{patient.id}"} %>

</section>

<% end %>
</section>
